<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MaplePoolMatch</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MaplePoolMatch.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light hlavicka mb-3">
            <div class="container-fluid">
                <div class="ball">
                    <span class="eight">8</span>
                </div>
                <a class="navbar-brand" id="light" asp-area="" asp-controller="Home" asp-action="Index"><span id="yellow">Pool</span>Match</a>
                
            </div>
            <partial name="_LoginPartial" />
        </nav>
    </header>
    <div style="height: 20vh"></div>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="paticka text-muted">
        <div class="container d-flex flex-column justify-content-center align-items-center" style="height: 150%;">
            <span>&copy; 2023 - PoolMatch - Lukas Praus</span>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
